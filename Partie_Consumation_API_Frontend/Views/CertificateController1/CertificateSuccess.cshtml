@{
}
@{
    ViewData["Title"] = "Success";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">Success!</h4>
                <p>Your certificate has been created and sent to your email.</p>
            </div>

            @if (TempData["CertificatePath"] != null)
            {
                <a href="@Url.Action("DownloadCertificate", "CertificateController1", new { filePath = TempData["CertificatePath"] })"
                   class="btn btn-primary">
                    Download Certificate
                </a>
            }

            <a href="/" class="btn btn-secondary ml-2">Return to Home</a>
        </div>
    </div>
</div>