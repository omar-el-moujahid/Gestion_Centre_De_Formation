<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StartupLearn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Partie_Consumation_API_Frontend.styles.css" asp-append-version="true" />
    <link rel="icon" href="img/favicon.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&family=Rubik:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    @RenderSection("VendorStyles", required: false)
    @RenderSection("PageStyles", required: false)
</head>
<body>
    @if (ViewBag.title != "Auth" && ViewBag.title != "Admin")
    {
        <!-- Spinner -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner"></div>
        </div>

        <!-- Topbar -->
        <div class="container-fluid bg-dark px-5 d-none d-lg-block">
            <div class="row gx-0">
                <div class="col-lg-8 text-center text-lg-start mb-2 mb-lg-0">
                    <div class="d-inline-flex align-items-center" style="height: 45px;">
                        <small class="me-3 text-light"><i class="fa fa-map-marker-alt me-2"></i>Ensaf, Fes, Morroco</small>
                        <small class="me-3 text-light"><i class="fa fa-phone-alt me-2"></i>0707909282</small>
                        <small class="text-light"><i class="fa fa-envelope-open me-2"></i>youssefibnezzyn@gmail.com</small>
                    </div>
                </div>
                <div class="col-lg-4 text-center text-lg-end">
                    <div class="d-inline-flex align-items-center" style="height: 45px;">
                        <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href="#"><i class="fab fa-facebook-f fw-normal"></i></a>
                        <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href="#"><i class="fab fa-linkedin-in fw-normal"></i></a>
                        <a class="btn btn-sm btn-outline-light btn-sm-square rounded-circle me-2" href="#"><i class="fab fa-instagram fw-normal"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navbar & Carousel -->
        <div class="container-fluid position-relative p-0">
            <nav class="navbar navbar-expand-lg navbar-dark px-5 py-3 py-lg-0">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand p-0">
                    <svg width="145" height="60" xmlns="http://www.w3.org/2000/svg">
                        <rect x="10" y="15" width="30" height="30" rx="5" ry="5" stroke="black" stroke-width="3" fill="#6930c3" />
                        <text x="26" y="37" font-size="20" font-family="Arial" text-anchor="middle" fill="white">C</text>
                        <text x="50" y="37" font-size="25" font-family="Arial" fill="#64dfdf">Codem</text>
                    </svg>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0">
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Services">Services</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Courses">Courses</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu m-0">
                                <a asp-area="" asp-controller="Home" asp-action="Price" class="dropdown-item">Pricing Plan</a>
                                <a asp-area="" asp-controller="Home" asp-action="features" class="dropdown-item">Our features</a>
                                <a asp-area="" asp-controller="Home" asp-action="team" class="dropdown-item">Team Members</a>
                                <a asp-area="" asp-controller="Home" asp-action="testimonial" class="dropdown-item">Testimonial</a>
                                <a asp-area="" asp-controller="Home" asp-action="quote" class="dropdown-item">Free Quote</a>
                            </div>
                        </div>
                        <a asp-area="" asp-controller="Home" asp-action="contact" class="nav-item nav-link">Contact</a>
                        <ul class="nav-item nav-link" style="list-style:none;padding-top: 4%;">
                            <li>
                                <a class="btn btn-primary py-2 px-4 ms-2" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <script>

                    // Récupérer le chemin de l'URL actuelle
                       var currentUrl = window.location.pathname;

                    // Sélectionner tous les éléments de navigation
                      var navLinks = document.querySelectorAll('.nav-item.nav-link');

                       // Parcourir chaque lien de navigation
                      navLinks.forEach(function(link) {
                         // Récupérer le chemin du lien
                          var linkUrl = link.getAttribute('href');

                           // Comparer le chemin du lien avec l'URL actuelle
                          if (currentUrl === linkUrl) {
                               // Ajouter la classe 'active' si les chemins correspondent
                               link.classList.add('active');
                         }
                      });
                </script>
            </nav>

            <!-- Arrière-plan d'En-tête Dynamique -->
            @{
                var action = ViewContext.RouteData.Values["action"]?.ToString();
            }
            @if (action == "About" || action == "Services" || action == "Price" || action == "features" || action == "team" || action == "testimonial" || action == "Contact" || action == "quote" || action == "Courses" || action == "Register" || action == "Notfounpage")
            {
                <div class="container-fluid bg-primary py-5 bg-header" style="margin-bottom: 90px;">
                    <div class="row py-5">
                        <div class="col-12 pt-lg-5 mt-lg-5 text-center">
                            <h1 class="display-4 text-white animated zoomIn">@action</h1>
                            <a href="" class="h5 text-white">Home</a>
                            <i class="far fa-circle text-white px-2"></i>
                            <a href="" class="h5 text-white">@action</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="w-100" src="~/img/carousel-1.jpg" alt="Solution numérique créative et innovante">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 900px;">
                                    <h5 class="text-white text-uppercase mb-3 animated slideInDown">Créatif & Innovant</h5>
                                    <h1 class="display-1 text-white mb-md-4 animated zoomIn">Solution numérique créative et innovante</h1>
                                    <a asp-area="" asp-controller="Home" asp-action="quote" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Devis Gratuit</a>
                                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-outline-light py-md-3 px-md-5 animated slideInRight">Contactez-nous</a>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="w-100" src="~/img/carousel-2.jpg" alt="Solution numérique créative et innovante">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 900px;">
                                    <h5 class="text-white text-uppercase mb-3 animated slideInDown">Créatif & Innovant</h5>
                                    <h1 class="display-1 text-white mb-md-4 animated zoomIn">Solution numérique créative et innovante</h1>
                                    <a asp-area="" asp-controller="Home" asp-action="quote" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Devis Gratuit</a>
                                    <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-outline-light py-md-3 px-md-5 animated slideInRight">Contactez-nous</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Précédent</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Suivant</span>
                    </button>
                </div>
            }
        </div>

        <!-- Contenu Principal -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- Section Fournisseurs -->
        <div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container py-5 mb-5">
                <div class="bg-white">
                    <div class="owl-carousel vendor-carousel">
                        <img src="~/img/image-1.jpg" alt="Fournisseur 1">
                        <img src="~/img/vendor-2.png" alt="Fournisseur 2">
                        <img src="~/img/vendor-3.png" alt="Fournisseur 3">
                        <img src="~/img/vendor-4.jpeg" alt="Fournisseur 4">
                        <img src="~/img/vendor-5.png" alt="Fournisseur 5">
                        <img src="~/img/vendor-6.png" alt="Fournisseur 6">
                        <img src="~/img/vendor-7.png" alt="Fournisseur 7">
                        <img src="~/img/vendor-8.png" alt="Fournisseur 8">
                        <img src="~/img/vendor-9.png" alt="Fournisseur 9">
                    </div>
                </div>
            </div>
        </div>

        <!-- Pied de Page -->
        <div class="container-fluid bg-dark text-light mt-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container">
                <div class="row gx-5">
                    <div class="col-lg-4 col-md-6 footer-about">
                        <div class="d-flex flex-column align-items-center justify-content-center text-center h-100 bg-primary p-4">
                            <a href="index.html" class="navbar-brand">
                                <h1 class="m-0 text-white"><i class="fa fa-user-tie me-2"></i>StartLearn</h1>
                            </a>
                            <p class="mt-3 mb-4">StartupLearn est une plateforme d'apprentissage en ligne offrant des cours de haute qualité pour les entrepreneurs, les professionnels et les apprenants. Avec des leçons interactives, des conseils d'experts et des ressources pratiques, elle soutient le développement des compétences, la croissance des entreprises et l'avancement personnel. Accessible, conviviale et polyvalente, StartupLearn permet aux apprenants d'atteindre leurs objectifs et de réussir dans le monde rapide d'aujourd'hui.</p>
                            <form action="">
                                <div class="input-group">
                                    <input type="text" class="form-control border-white p-3" placeholder="Votre Email">
                                    <button class="btn btn-dark">S'inscrire</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-6">
                        <div class="row gx-5">
                            <div class="col-lg-4 col-md-12 pt-5 mb-5">
                                <div class="section-title section-title-sm position-relative pb-3 mb-4">
                                    <h3 class="text-light mb-0">Contactez-nous</h3>
                                </div>
                                <div class="d-flex mb-2">
                                    <i class="bi bi-geo-alt text-primary me-2"></i>
                                    <p class="mb-0">Ensaf, Fes, Maroc</p>
                                </div>
                                <div class="d-flex mb-2">
                                    <i class="bi bi-envelope-open text-primary me-2"></i>
                                    <p class="mb-0">youssefibnezzyn@gmail.com</p>
                                </div>
                                <div class="d-flex mb-2">
                                    <i class="bi bi-telephone text-primary me-2"></i>
                                    <p class="mb-0">0707909282</p>
                                </div>
                                <div class="d-flex mt-4">
                                    <a class="btn btn-primary btn-square me-2" href="#"><i class="fab fa-facebook-f fw-normal"></i></a>
                                    <a class="btn btn-primary btn-square me-2" href="#"><i class="fab fa-linkedin-in fw-normal"></i></a>
                                    <a class="btn btn-primary btn-square" href="#"><i class="fab fa-instagram fw-normal"></i></a>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-12 pt-0 pt-lg-5 mb-5">
                                <div class="section-title section-title-sm position-relative pb-3 mb-4">
                                    <h3 class="text-light mb-0">Liens Rapides</h3>
                                </div>
                                <div class="link-animated d-flex flex-column justify-content-start">
                                    <a class="text-light mb-2" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-right text-primary me-2"></i>Accueil</a>
                                    <a class="text-light mb-2" asp-area="" asp-controller="Home" asp-action="About"><i class="bi bi-arrow-right text-primary me-2"></i>À propos</a>
                                    <a class="text-light mb-2" asp-area="" asp-controller="Home" asp-action="Services"><i class="bi bi-arrow-right text-primary me-2"></i>Nos Services</a>
                                    <a class="text-light mb-2" asp-area="" asp-controller="Home" asp-action="team"><i class="bi bi-arrow-right text-primary me-2"></i>Rencontrez l'Équipe</a>
                                    <a class="text-light mb-2" asp-area="" asp-controller="Home" asp-action="Courses"><i class="bi bi-arrow-right text-primary me-2"></i>Derniers Cours</a>
                                    <a class="text-light" asp-area="" asp-controller="Home" asp-action="contact"><i class="bi bi-arrow-right text-primary me-2"></i>Contactez-nous</a>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-12 pt-0 pt-lg-5 mb-5">
                                <div class="section-title section-title-sm position-relative pb-3 mb-4">
                                    <h3 class="text-light mb-0">Liens Populaires</h3>
                                </div>
                                <div class="link-animated d-flex flex-column justify-content-start">
                                    <a class="text-light mb-2" asp-area="" asp-controller="Home" asp-action="Price"><i class="bi bi-arrow-right text-primary me-2"></i>Plan de Tarification</a>
                                    <a class="text-light mb-2" asp-area="" asp-controller="Home" asp-action="features"><i class="bi bi-arrow-right text-primary me-2"></i>Nos Fonctionnalités</a>
                                    <a class="text-light mb-2" asp-area="" asp-controller="Home" asp-action="testimonial"><i class="bi bi-arrow-right text-primary me-2"></i>Témoignages</a>
                                    <a class="text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-right text-primary me-2"></i>StartLearn</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid text-white" style="background: #061429;">
            <div class="container text-center">
                <div class="row justify-content-end">
                    <div class="col-lg-8 col-md-6">
                        <div class="d-flex align-items-center justify-content-center" style="height: 75px;">
                            <p class="mb-0">
                                &copy; <a class="text-white border-bottom" href="#">StartupLearn</a>. Tous droits réservés.
                                Conçu par <a class="text-white border-bottom" href="https://htmlcodex.com">l'équipe khaliha alallah</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Retour en Haut -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded back-to-top"><i class="bi bi-arrow-up"></i></a>
    }

    <!-- Bibliothèques JavaScript -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Scripts Personnalisés -->
    <script src="~/js/main.js"></script>

    <!------------------------------------------------------------------------------>
    @RenderSection("VendorScripts", required: false)
    @RenderSection("PageScripts", required: false)
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>