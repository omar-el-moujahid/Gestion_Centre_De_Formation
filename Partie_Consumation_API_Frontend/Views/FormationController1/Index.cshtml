@model Partie_Api_Amd_Logique_Metier.Models.Formation
@{
    Layout = "_Layout";
    ViewData["Title"] = "Participant";
}
<div class="parent">
    <div class="gap"></div>
    <div class="course-container">
        <div class="course-container-info">
            <!-- Titre et image -->
            <div class="image_countainer">

            </div>
            <div class="course-header">
                <h1 class="course-title">@Model.Titre</h1>
                <img src="@Model.url_image" alt="@Model.Titre" class="course-image">
            </div>

            <!-- Description -->
            <p class="course-description">@Model.Description</p>

            <!-- Prix et estimation de durée -->
            <div class="course-price-duration">
                <p><strong>Prix :</strong> @Model.Prix $US</p>
                <p><strong>Durée estimée :</strong> @Model.EstimationDeDuree</p>
            </div>

            <!-- Catégorie -->
            <p class="course-category"><strong>Catégorie :</strong> @Model.Category.Name</p>

            <!-- Formateur -->
            <p class="course-instructor"><strong>Formateur :</strong> @Model.Formateur.Name</p>

            <!-- Dernière mise à jour -->
            <p class="course-last-update">
                <strong>Dernière mise à jour :</strong> @DateTime.Now.ToString("MM/yyyy")
            </p>

            <!-- Nombre de participants -->
            <p class="course-participants">
                <strong>Nombre d'inscriptions :</strong> @Model.Inscriptions?.Count ?? 0 participants
            </p>

            <!-- Évaluation -->
            <div class="course-rating">
                <strong>Note moyenne :</strong>
                @if (Model.Evaluations?.Count > 0)
                {
                    @Math.Round(Model.Evaluations.Average(e => e.Rating), 1)
                }
                else
                {
                    <span>Aucune note pour le moment</span>
                }
            </div>

        </div>

        <!-- Boutons d'achat -->
        <div class="course-actions">
            <button class="buy-now">Acheter maintenant - @Model.Prix $US</button>
            <button class="add-to-cart">Ajouter au panier</button>
        </div>

        <!-- Section "Ce que vous apprendrez" -->
        <div class="learning-objectives">
            <h2 class="title">Ce que vous apprendrez</h2>
            <ul class="objectives-list">
                <li>
                    <strong>Les bases de la formation :</strong>
                    <ul>
                        <li>🖥️ Configuration de l'environnement de développement.</li>
                        <li>💻 Écriture et exécution d'un premier programme.</li>
                        <li>🛠️ Concepts fondamentaux : identifiants, opérateurs, et instructions de contrôle.</li>
                    </ul>
                </li>
                <li>
                    <strong>Contrôle de flux :</strong>
                    <ul>
                        <li>🔄 Compréhension des structures conditionnelles, boucles et instructions de saut.</li>
                    </ul>
                </li>
                <li>
                    <strong>Manipulation des données :</strong>
                    <ul>
                        <li>📦 Gestion des tableaux et des méthodes.</li>
                    </ul>
                </li>
                <li>
                    <strong>Programmation orientée objet (POO) :</strong>
                    <ul>
                        <li>🏗️ Apprentissage approfondi des concepts de la POO (classes, objets, héritage, polymorphisme).</li>
                    </ul>
                </li>
                <li>
                    <strong>Développement d'applications avancées :</strong>
                    <ul>
                        <li>🌐 Introduction au développement d'API RESTful.</li>
                        <li>🔐 Utilisation du Security.</li>
                        <li>⚙️ Développement et gestion de microservices.</li>
                    </ul>
                </li>
            </ul>
        </div>

        <!-- Section "Ce cours comprend" -->
        <div class="course-includes">
            <h2 class="includes-header">Ce cours comprend :</h2>
            <ul class="includes-list">
                <li class="include-item">
                    <svg class="icon" aria-hidden="true">
                        <use xlink:href="#icon-video"></use>
                    </svg>
                    <span>Vidéo à la demande de @Model.EstimationDeDuree heures</span>
                </li>
                <li class="include-item">
                    <svg class="icon" aria-hidden="true">
                        <use xlink:href="#icon-quiz"></use>
                    </svg>
                    <span>1 exercices pratiques</span>
                </li>
                <li class="include-item">
                    <svg class="icon" aria-hidden="true">
                        <use xlink:href="#icon-downloadable-resource"></use>
                    </svg>
                    <span>92 ressources téléchargeables</span>
                </li>
                <li class="include-item">
                    <svg class="icon" aria-hidden="true">
                        <use xlink:href="#icon-mobile"></use>
                    </svg>
                    <span>Accès sur mobiles et TV</span>
                </li>
                <li class="include-item">
                    <svg class="icon" aria-hidden="true">
                        <use xlink:href="#icon-lifetime"></use>
                    </svg>
                    <span>Accès illimité</span>
                </li>
                <li class="include-item">
                    <svg class="icon" aria-hidden="true">
                        <use xlink:href="#icon-trophy"></use>
                    </svg>
                    <span>Certificat de fin de formation</span>
                </li>
            </ul>
        </div>
    </div>
</div>

<style>
    .parent {
        /* background-image: url("/img/images.jpg"); */
        /* background-size: contain; /* Ajuste l'image pour qu'elle couvre tout l'élément */ */
        /* background-position: center; /* Centre l'image */ */
        /* background-repeat: no-repeat; /* Empêche la répétition */ */ 
        margin-top: 2 rem;
    }

    .gap{
        margin-top:100px
    }
    .course-container {
        max-width: 800px;
        margin: 0 auto;
        text-align: center; /* Centre le contenu */
        font-family: Arial, sans-serif;
        line-height: 1.6;
    }
    .course-container-info{
        text-align: left;
    }
    .course-header {
        margin-bottom: 20px;
    }

    .course-title {
        font-size: 28px;
        font-weight: bold;
        color: #333;
    }

    .course-image {
        width: 100%;
        height: auto;
        border-radius: 5px;
        margin: 20px 0;
    }

    .course-description {
        font-size: 16px;
        color: #555;
        margin: 10px 0;
    }

    .course-price-duration,
    .course-category,
    .course-instructor,
    .course-last-update,
    .course-participants {
        font-size: 16px;
        margin: 10px 0;
        color: #333;
    }

    .course-rating span {
        color: #f39c12;
    }

    .course-actions {
        margin: 20px 0;
    }

    .buy-now, .add-to-cart {
        background-color: #ff5722;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin: 5px;
    }

    .learning-objectives,
    .course-includes {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        margin: 20px auto;
        text-align: left;
    }

    .includes-list {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px 30px;
        padding: 0;
        list-style: none;
    }

    .include-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .icon {
        width: 24px;
        height: 24px;
        fill: #333;
    }

</style>

