@{
    ViewData["Title"] = "SignupParticipant";
}

<h2>Participant SignUp</h2>

<div id="loginFormPart" class="form-content" style="margin-left:19%">
    <form>
        <!-- Nom -->
        <div class="form-group">
            <label for="nom" class="form-label">Nom</label>
            <input type="text" id="nom" class="form-control" placeholder="Entrez votre nom" required style="width: 350px;">
        </div>

        <!-- Prénom -->
        <div class="form-group">
            <label for="prenom" class="form-label">Prénom</label>
            <input type="text" id="prenom" class="form-control" placeholder="Entrez votre prénom" required style="width: 350px;">
        </div>

        <!-- Email -->
        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" class="form-control" placeholder="Entrez votre email" required style="width: 350px;">
        </div>

        <!-- Mot de passe -->
        <div class="form-group">
            <label for="password" class="form-label">Mot de passe</label>
            <input type="password" id="password" class="form-control" placeholder="Entrez votre mot de passe" required style="width: 350px;">
        </div>

        <!-- Confirmer le mot de passe -->
        <div class="form-group">
            <label for="confirmPassword" class="form-label">Confirmer le mot de passe</label>
            <input type="password" id="confirmPassword" class="form-control" placeholder="Confirmez votre mot de passe" required style="width: 350px;">
        </div>
        <br />
        <button type="submit" class="btn btn-primary py-2 px-4 ms-3">S'inscrire</button><a class="btn btn-primary py-2 px-4 ms-3" aasp-area="" asp-controller="Home" asp-action="RegisterParticipant">Login</a>
    </form>
    <br />
</div>

