@{
    ViewData["Title"] = "RegisterParticipant";
}

<h2>Participant Login</h2>

<div id="loginFormPart" class="form-content" style="margin-left:19%">
    <h2>Login</h2>
    <form>
        <div class="form-group">
            <label for="loginEmail" class="form-label">Email</label>
            <input type="email" id="loginEmail" class="form-control" placeholder="Entrez votre email" required style="width: 350px;">
        </div>
        <div class="form-group">
            <label for="loginPassword" class="form-label">Mot de passe</label>
            <input type="password" id="loginPassword" class="form-control" placeholder="Entrez votre mot de passe" required style="width: 350px;">
        </div>
        <br />
        <button type="submit" class="btn btn-primary py-2 px-4 ms-3">Se connecter</button><a class="btn btn-primary py-2 px-4 ms-3" aasp-area="" asp-controller="Home" asp-action="SignupParticipant">SignUp</a>
    </form>
    <br />

</div>

