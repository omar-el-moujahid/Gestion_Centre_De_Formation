            <div class="bg-light rounded p-5">
                <div class="section-title section-title-sm position-relative pb-3 mb-4">
                    <h3 class="mb-0">Leave A Comment</h3>
                </div>

                @* <a asp-area="" asp-controller="Comments" asp-action="Create" class="btn btn-primary">Comment</a> *@

                <form id="commentForm">
                    <div class="row g-3">
                        <div class="col-12 col-sm-6">
                            <input type="text" id="name" class="form-control bg-white border-0" placeholder="Your Name" style="height: 55px;">
                        </div>
                        <div class="col-12 col-sm-6">
                            <input type="email" id="email" class="form-control bg-white border-0" placeholder="Your Email" style="height: 55px;">
                        </div>
                        <div class="col-12">
                            <textarea class="form-control bg-white border-0" id="comment" rows="5" placeholder="Comment"></textarea>
                        </div>
                        <div class="col-12">
                            <button type="button" onclick="ajouter()" class="btn btn-primary w-100 py-3">Leave Your Comment</button>
                        </div>
                    </div>
                </form>
            </div>

            <script>
                function ajouter() {
                    // Récupérer les valeurs des champs du formulaire
                    var name = document.getElementById('name').value;
                    var comment = document.getElementById('comment').value;

                    // Vérifier si tous les champs sont remplis
                    if (name && comment) {
                        // Créer un nouveau div pour le commentaire
                        var commentDiv = document.getElementById('ajout');

                        // Sanitize the comment to prevent XSS attacks
                        var sanitizedComment = comment.replace(/</g, "&lt;").replace(/>/g, "&gt;");
                        var sanitizedName = name.replace(/</g, "&lt;").replace(/>/g, "&gt;");

                        // Ajouter le contenu au div
                        commentDiv.innerHTML += `
                            <div class="d-flex mb-4">
                                <div class="ps-3">
                                    <h6><a>${sanitizedName}</a></h6>
                                    <p>${sanitizedComment}</p>
                                </div>
                            </div>
                        `;

                        // Clear the form fields
                        document.getElementById('commentForm').reset();
                    } else {
                        alert("Please fill in all the required fields.");
                    }
                }
            </script>


